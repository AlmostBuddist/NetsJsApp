{
  "name": "nest-template",
  "version": "0.0.1",
  "description": "Nest.js project template",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/application/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typeorm": "typeorm-ts-node-commonjs -d typeormconfig.ts",
    "migration:up": "npm run typeorm migration:run",
    "migration:down": "npm run typeorm migration:revert",
    "migration:generate": "npm run typeorm migration:generate src/data/postgres/migrations/$npm_config_name",
    "migration:create": "npm run typeorm migration:create src/data/postgres/migrations/$npm_config_name",
    "test": "jest --forceExit --maxWorkers=1 --detectOpenHandles",
    "test:unit": "jest --coverage --forceExit --maxWorkers=1 --config ./test/jest-unit.json",
    "test:integration": "jest --coverage --forceExit --maxWorkers=1 --config ./test/jest-integration.json",
    "test:e2e": "jest --coverage --forceExit --maxWorkers=1 --config ./test/jest-e2e.json",
    "test:verb": "jest --verbose --forceExit --maxWorkers=1 --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage  --forceExit --maxWorkers=1 --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@fastify/helmet": "10.0.1",
    "@fastify/static": "6.5.0",
    "@nestjs/common": "9.1.2",
    "@nestjs/core": "9.1.2",
    "@nestjs/platform-fastify": "9.1.2",
    "@nestjs/swagger": "6.1.2",
    "@nestjs/terminus": "9.1.2",
    "@nestjs/typeorm": "9.0.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@willsoto/nestjs-prometheus": "4.7.0",
    "bcrypt": "5.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "config": "3.3.8",
    "fastify": "4.7.0",
    "fastify-express": "0.4.0",
    "fastify-swagger": "5.2.0",
    "jsonwebtoken": "8.5.1",
    "pg": "8.8.0",
    "prom-client": "14.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.7",
    "typeorm": "0.3.10",
    "typeorm-naming-strategies": "4.1.0"
  },
  "devDependencies": {
    "@a2seven/eslint-config": "1.0.3",
    "@nestjs/cli": "9.1.4",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.2",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "3.3.0",
    "@types/jest": "29.1.1",
    "@types/node": "16.11.26",
    "@types/supertest": "2.0.12",
    "@types/yargs": "17.0.13",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "eslint": "8.11.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-max-params-no-constructor": "0.0.4",
    "eslint-plugin-no-loops": "0.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "29.1.2",
    "prettier": "2.6.0",
    "source-map-support": "0.5.21",
    "supertest": "6.3.0",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.*-spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "testTimeout": 20000
  }
}
